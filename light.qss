QMainWindow::separator {
  background: #B0E0E6;
  width: 5px; /* when vertical */
  height: 3px; /* when horizontal */
}

QMainWindow {
  background: #FCFCFC;
  color: #000000;
}

QMainWindow::separator:hover {
  background: #9AFF9A;
}

QPushButton {
  background-color: transparent;
  border: none;
  /*font: bold 14px;*/
  min-width: 4em;
  /*min-height: 18px;*/
  padding: 2px;
  color: #1864ab;
}
QPushButton:hover {
  background-color: transparent;
  border-color: #90EE90;
}
QPushButton:disabled {
  background-color: transparent;
}

QLineEdit {
  border: 2px solid gray;
  border-radius: 10px;
  padding: 0 8px;
  background: #e6fcf5;
  selection-background-color: darkgray;
}

QLineEdit:hover,focus {
    background-color: #c3fae8;
    border-color: #66CDAA;
}

QLineEdit[echoMode="2"] {
  lineedit-password-character: 9679;
}

QLineEdit:read-only {
  background: white;
}

QTableView {
  /*selection-background-color: qlineargradient(x1: 0, y1: 0, x2: 0.5, y2: 0.5,
                             stop: 0 #FF92BB, stop: 1 white);*/
  selection-background-color: #87CEFA;
  padding: 4px;
  border: 2px solid #8f8f91;
  border-radius: 6px;
  background: #FFFFFF;
  color: #000000;
  gridline-color: #C0C0C0;
  alternate-background-color: #F8F8F8;
}

QTableView QTableCornerButton::section {
  background: #E0EEEE;
  border: 2px outset #E0EEEE;
}

/* 表格表头样式 */
QHeaderView::section {
  background: #F0F0F0;
  color: #000000;
  padding: 4px;
  border: 1px solid #C0C0C0;
  font-weight: bold;
}

QHeaderView::section:hover {
  background: #E0E0E0;
}

QHeaderView::section:pressed {
  background: #D0D0D0;
}

/* 水平表头（列标头） */
QHeaderView::section:horizontal {
  background: #F0F0F0;
  color: #000000;
  border-right: 1px solid #C0C0C0;
  border-bottom: 1px solid #C0C0C0;
}

QHeaderView::section:horizontal:hover {
  background: #E0E0E0;
}

/* 垂直表头（行标头） */
QHeaderView::section:vertical {
  background: #F0F0F0;
  color: #000000;
  border-right: 1px solid #C0C0C0;
  border-bottom: 1px solid #C0C0C0;
}

QHeaderView::section:vertical:hover {
  background: #E0E0E0;
}

QTableView::indicator:unchecked {
  background-color: #d7d6d5;
}

/* 表格行号列样式 */
QTableView::item {
  background: #FFFFFF;
  color: #000000;
  border: none;
  padding: 2px;
}

QTableView::item:selected {
  background: #87CEFA;
  color: #000000;
}

QTableView::item:alternate {
  background: #F8F8F8;
  color: #000000;
}

/* 表格复选框样式 */
QTableView::indicator {
  width: 13px;
  height: 13px;
}

QTableView::indicator:unchecked {
  border: 1px solid #C0C0C0;
  background: #FFFFFF;
}

QTableView::indicator:checked {
  border: 1px solid #C0C0C0;
  background: #87CEFA;
}

QTableView::indicator:indeterminate {
  border: 1px solid #C0C0C0;
  background: #E0E0E0;
}

/* 表格网格线样式 */
QTableView {
  gridline-color: #C0C0C0;
}

/* 表格滚动条样式 */
QTableView QScrollBar:vertical {
  background: #F0F0F0;
  width: 12px;
  border: none;
}

QTableView QScrollBar::handle:vertical {
  background: #C0C0C0;
  border-radius: 6px;
  min-height: 20px;
}

QTableView QScrollBar::handle:vertical:hover {
  background: #A0A0A0;
}

QTableView QScrollBar:horizontal {
  background: #F0F0F0;
  height: 12px;
  border: none;
}

QTableView QScrollBar::handle:horizontal {
  background: #C0C0C0;
  border-radius: 6px;
  min-width: 20px;
}

QTableView QScrollBar::handle:horizontal:hover {
  background: #A0A0A0;
}

QDockWidget {
  border: 1px solid lightgray;
  titlebar-close-icon: url(close.png);
  titlebar-normal-icon: url(undock.png);
}

QDockWidget::title {
  text-align: left; /* align the text to the left */
  background: lightgray;
  padding-left: 5px;
}

QDockWidget::close-button, QDockWidget::float-button {
  border: 1px solid transparent;
  background: darkgray;
  padding: 0px;
}

QDockWidget::close-button:hover, QDockWidget::float-button:hover {
  background: gray;
}

QDockWidget::close-button:pressed, QDockWidget::float-button:pressed {
  padding: 1px -1px -1px 1px;
}

QListView {
  show-decoration-selected: 1; /* make the selection span the entire width of the view */
  outline: none;
  padding: 4px;
  border: 2px solid #8f8f91;
  border-radius: 6px;
  background: #FFFFFF;
  color: #000000;
}

QListView::item:alternate {
  background: #EEEEEE;
}

QListView::item:selected {
  border: 1px solid #6a6ea9;
}

QListView::item:selected:!active {
  background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                             stop: 0 #ABAFE5, stop: 1 #8588B2);
}

QListView::item:selected:active {
  background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                             stop: 0 #6a6ea9, stop: 1 #888dd9);
}

QListView::item:hover {
  background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                             stop: 0 #FAFBFE, stop: 1 #DCDEF1);
}


QMenu {
  background-color: white;
  margin: 2px; /* some spacing around the menu */
}

QMenu::item {
  padding: 2px 25px 2px 20px;
  border: 1px solid transparent; /* reserve space for selection border */
}

QMenu::item:selected {
  /*border-color: darkblue;*/
  /*background: rgba(100, 100, 100, 150);*/
  background-color: #87CEFA;
}

QMenu::icon:checked { /* appearance of a 'checked' icon */
  background: gray;
  border: 1px inset gray;
  position: absolute;
  top: 1px;
  right: 1px;
  bottom: 1px;
  left: 1px;
}

QMenu::separator {
  height: 2px;
  background: lightblue;
  margin-left: 10px;
  margin-right: 5px;
}

QMenu::indicator {
  width: 13px;
  height: 13px;
}

QMenuBar {
  background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                    stop:0 lightgray, stop:1 darkgray);
}

QMenuBar::item {
  spacing: 3px; /* spacing between menu bar items */
  padding: 1px 4px;
  background: transparent;
  border-radius: 4px;
}

QMenuBar::item:selected { /* when selected using mouse or keyboard */
  background: #a8a8a8;
}

QMenuBar::item:pressed {
  background: #888888;
}

QDateEdit {
  spacing: 3px;
  padding: 1px 4px;
  background: #F0F2EC;
  border: 2px;
  border-radius: 8px;
}

QDateEdit:hover,focus {
    background-color: #DAD7D0
}

QDateEdit:disabled {
    background-color: #A6ACAF
}

QDateEdit::down-button {
    image: url(":/icon/images/arrow_drop_down.png")
}

QDateEdit::down-button:pressed {
    image: url(":/icon/images/arrow_drop_down_pressed.png")
}

QDateEdit::drop-down {
    image: url(":/icon/images/arrow_drop_down.png");
    subcontrol-origin: content;
    subcontrol-position: bottom right;
}

QDateEdit::drop-down:pressed {
    image: url(":/icon/images/arrow_drop_down_pressed.png")
}

QDateEdit:up-button {
    image: url(":/icon/images/arrow_drop_up.png")
}

QDateEdit:up-button:pressed {
    image: url(":/icon/images/arrow_drop_up_pressed.png")
}

QProgressBar {
    border: 2px solid grey;
    border-radius: 5px;
    text-align: center;
    background: #FFFFFF;
    color: #000000;
}

QProgressBar::chunk {
    background-color: #05B8CC;
    width: 20px;
}

