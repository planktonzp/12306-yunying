/* 状态栏样式 */
QStatusBar {
    background: #F0F0F0;
    color: #000000;
    border-top: 1px solid #C0C0C0;
}

QStatusBar::item {
    border: none;
}

QStatusBar QLabel {
    color: #000000;
}

/* 状态栏中的进度条 */
