QDialog {
    background-color: #F8F8F8;
    color: #000000;
}

/* LineChart 对话框样式 - 浅色主题 */
QDialog[objectName="delayChart"],
QDialog[objectName="latencyChart"] {
    background-color: #FFFFFF;
    border: 1px solid #C0C0C0;
    border-radius: 4px;
}

QDialog[objectName="delayChart"] QLabel,
QDialog[objectName="latencyChart"] QLabel {
    color: #000000;
}

QDialog[objectName="delayChart"] QPushButton,
QDialog[objectName="latencyChart"] QPushButton {
    background-color: transparent;
    border: none;
    color: #1864ab;
}

QTextEdit {
    padding: 4px;
    border: 2px solid #8f8f91;
    border-radius: 6px;
    background: #FFFFFF;
    color: #000000;
}

QComboBox {
    border: 1px solid gray;
    border-radius: 3px;
    padding: 1px 18px 1px 3px;
    color: #000000;
}

QComboBox:editable {
    background: white;
}

QComboBox:!editable, QComboBox::drop-down:editable {
     background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                 stop: 0 #E1E1E1, stop: 0.4 #DDDDDD,
                                 stop: 0.5 #D8D8D8, stop: 1.0 #D3D3D3);
}

/* QComboBox gets the "on" state when the popup is open */
QComboBox:!editable:on, QComboBox::drop-down:editable:on {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #D3D3D3, stop: 0.4 #D8D8D8,
                                stop: 0.5 #DDDDDD, stop: 1.0 #E1E1E1);
}

QComboBox:on { /* shift the text when the popup opens */
    padding-top: 3px;
    padding-left: 4px;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 15px;

    border-width: 1px;
    border-color: darkgray;
    border-style: solid; /* just a single line */
    border-radius: 3px; /* same radius as the QComboBox */
}

QComboBox::down-arrow {
    image: url(":/icon/images/arrow_drop_down.png");
}

QComboBox::down-arrow:on { /* shift the arrow when popup is open */
    top: 1px;
    left: 1px;
}

QSpinBox {
    border: 1px solid gray;
    border-radius: 4px;
    padding: 2px;
    color: #000000;
}

QSpinBox::up-button {
    /*subcontrol-origin: border;
    subcontrol-position: top right;*/ /*  position at the top right corner */

    width: 14px; /* 16 + 2*1px border-width = 15px padding + 3px parent border */
    border-width: 1px;
    border-bottom-width: 0;
}

QSpinBox:down-arrow {
    image: url(":/icon/images/arrow_drop_down@14px.png");
}

QSpinBox:down-arrow:pressed {
    image: url(":/icon/images/arrow_drop_down_pressed.png");
}

QSpinBox::down-button {
    /*subcontrol-origin: border;
    subcontrol-position: bottom right;*/ /*  position at bottom right corner */

    width: 14px;
    border-width: 1px;
    border-top-width: 0;
}

QSpinBox:up-arrow {
    image: url(":/icon/images/arrow_drop_up@14px.png");
}

QSpinBox:up-arrow:pressed {
    image: url(":/icon/images/arrow_drop_up_pressed.png");
}

QSpinBox:enabled:hover,focus {
    border-color: #3498DB
}

QScrollBar:horizontal {
    border: 2px solid grey;
    background: #CCD1D1;
    height: 15px;
    margin: 0 22px 0 22px;
}
QScrollBar::handle:horizontal {
    background: #F5CBA7;
    min-width: 20px;
}
QScrollBar::handle:horizontal:hover {
    background: #EB984E;
    min-height: 20px;
}
QScrollBar::add-line:horizontal {
    border: 2px solid grey;
    background: #CCD1D1;
    width: 20px;
    subcontrol-position: right;
    subcontrol-origin: margin;
}
QScrollBar::sub-line:horizontal {
    border: 2px solid grey;
    background: #CCD1D1;
    width: 20px;
    subcontrol-position: left;
    subcontrol-origin: margin;
}
QScrollBar::left-arrow:horizontal {
    image: url(":icon/images/arrow_left_small.png")
}
QScrollBar::left-arrow:horizontal:hover {
    image: url(":icon/images/arrow_left_small_hover.png")
}
QScrollBar::right-arrow:horizontal {
    image: url(":icon/images/arrow_right_small.png")
}
QScrollBar::right-arrow:horizontal:hover {
    image: url(":icon/images/arrow_right_small_hover.png")
}
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
     background: none;
}

QScrollBar:vertical {
     border: 2px solid grey;
     background: #CCD1D1;
     width: 15px;
     margin: 22px 0 22px 0;
}
QScrollBar::handle:vertical {
     background: #F5CBA7;
     min-height: 20px;
}
QScrollBar::handle:vertical:hover {
     background: #EB984E;
     min-height: 20px;
}
QScrollBar::add-line:vertical {
     border: 2px solid grey;
     background: #CCD1D1;
     height: 20px;
     subcontrol-position: bottom;
     subcontrol-origin: margin;
}
QScrollBar::sub-line:vertical {
     border: 2px solid grey;
     background: #CCD1D1;
     height: 20px;
     subcontrol-position: top;
     subcontrol-origin: margin;
}
QScrollBar::down-arrow:vertical {
    image: url(":icon/images/arrow_down_small.png")
}
QScrollBar::down-arrow:vertical:hover {
    image: url(":icon/images/arrow_down_small_hover.png")
}
QScrollBar::up-arrow:vertical {
    image: url(":icon/images/arrow_up_small.png")
}
QScrollBar::up-arrow:vertical:hover {
    image: url(":icon/images/arrow_up_small_hover.png")
}
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
     background: none;
}

QToolTip {
    border: 2px solid darkkhaki;
    padding: 5px;
    border-radius: 3px;
    opacity: 200;
